@using BeSpoked.ViewModels;
@{
    var salesperson = (SalespersonViewModel)ViewData["Salesperson"];
}

<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" asp-area="">Home</a></li>
    <li class="breadcrumb-item"><a asp-controller="salesperson" asp-action="List" asp-area="">Salespeople</a></li>
    <li class="breadcrumb-item active">@salesperson.Sp_Name_First @salesperson.Sp_Name_Last</li>
</ol>

<h1>Salesperson: @salesperson.Sp_Name_First @salesperson.Sp_Name_Last</h1>

<div class="row">
    <div class="col">
        <a class="btn btn-sm btn-outline-dark" asp-action="Edit" asp-route-Sp_Key="@salesperson.Sp_Key"><i class="fa-solid fa-pen-to-square"></i></a>
    </div>
</div>

<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Name_First"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Name_First
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Name_Last"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Name_Last
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Addr_1"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Addr_1
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Addr_2"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Addr_2
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Phone"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Phone
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Sp_Date_Start"></label>
    </div>
    <div class="col">
        @salesperson.Sp_Date_Start
    </div>
</div>
@if (!salesperson.Sp_Active)
{
    <div class="row">
        <div class="col">
            <label asp-for="@salesperson.Sp_Date_Termination"></label>
        </div>
        <div class="col">
            @salesperson.Sp_Date_Termination
        </div>
    </div>
}


<div class="row">
    <div class="col">
        <label asp-for="@salesperson.Mg_Name"></label>
    </div>
    <div class="col">
        @salesperson.Mg_Name
    </div>
</div>